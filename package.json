{
    "version": "1.0.0",
    "name": "ts-playwright-allure",
    "description": "Typescript Playwright Allure",
    "author": "Denis Krasilnikov",
    "license": "ISC",
    "main": "index.js",
    "scripts": {
        "start": "playwright test",
        "build:executors2": "echo '{\"name\": \"Allure Report\",\"buildName\": \"'$BUILD_URL'\",\"buildUrl\": \"'$GIT_URL'\"}' > /Users/skadio/playground/test-results/executor.json",
        "build:executors": "echo '{\"name\": \"Jenkins\", \"type\": \"jenkins\", \"url\": \"http://example.org\", \"buildOrder\": 13, \"buildName\": \"allure-report_deploy#13\", \"buildUrl\": \"http://example.org/build#13\", \"reportUrl\": \"http://example.org/build#13/AllureReport\", \"reportName\": \"Demo allure report\"}' > /Users/skadio/playground/test-results/executor.json",
        "save:history": "cp -r allure-history/history test-results/history",
        "build:history": "/opt/homebrew/bin/allure generate test-results -o allure-history --clean",
        "build:html": "/opt/homebrew/bin/allure generate test-results -o allure-report --clean --single-file",
        "save:html": "cp allure-report/index.html reporting-app/public/reports/$(date +'%Y%m%d_%H%M%S').html",
        "report-server": "playwright show-report allure-report",
        "tests": "npm run start; npm run save:history; npm run build:history; npm run build:html; npm run save:html",
        "jenkins": "npm run start; npm run build:executors; npm run save:history; npm run build:history; npm run build:html; npm run save:html",
        "jenkins-old": "playwright test; /opt/homebrew/bin/allure generate test-results -o allure-report --clean --single-file; playwright show-report allure-report &"
    },
    "keywords": [],
    "dependencies": {
        "@playwright/test": "^1.40.1",
        "@types/node": "^20.11.0",
        "allure-playwright": "^2.10.0",
        "get-port": "^7.0.0",
        "lighthouse": "^11.4.0",
        "playwright-lighthouse": "^3.2.6",
        "winston": "^3.11.0",
        "os": "^0.1.2"
    },
    "type": "module"
}
